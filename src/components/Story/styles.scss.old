@use 'src/styles/vars';

.story {
  background: vars.$background;
  display: flex;
  justify-content: center;
  align-items: center;
  height: calc(100vh - 80px);
  padding: 2rem;
  overflow: hidden;

  h1 {
    font-size: 1.5rem;
  }

  h2 {
    font-size: 1.2rem;
  }

  .hr {
    border: 0;
    height: 1px;
    width: 200px;
    background: vars.$darkColor;
    background-image: linear-gradient(to right, vars.$bookPage, vars.$darkColor, vars.$bookPage);
    margin: 1.5rem auto;
  }

  p {
    text-align: left;
    margin: .5rem 0;
  }

  &__book {
    background: vars.$book;
    padding: 2rem 3rem;
    border-radius: 7px;
    display: flex;
    align-items: center;
    max-width: 1100px;
    box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.7);
    -webkit-box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.7);
    -moz-box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.7);

    &__page-left {
      background: vars.$bookPage;
      display: flex;
      flex-direction: column;
      width: 50%;
      height: 600px;
      padding: 4rem;
      text-align: center;
      box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.7);
      -webkit-box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.7);
      -moz-box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.7);
      position: relative;
  
      &::before {
        content: "";
        background: vars.$bookPage;
        width: 15px;
        height: 100%;
        position: absolute;
        top: 0;
        left: -15px;
        box-shadow: inset 0px 0px 3px 0px rgba(0,0,0,0.7);
        -webkit-box-shadow: inset 0px 0px 3px 0px rgba(0,0,0,0.7);
        -moz-box-shadow: inset 0px 0px 3px 0px rgba(0,0,0,0.7);
      }
    }
  
    &__page-right {
      background: vars.$bookPage;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 50%;
      height: 600px;
      padding: 4rem;
      box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.7);
      -webkit-box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.7);
      -moz-box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.7);
      position: relative;
  
      img {
        max-width: 250px;
      }
  
      &::after {
        content: "";
        background: vars.$bookPage;
        width: 15px;
        height: 100%;
        position: absolute;
        top: 0;
        right: -15px;
        box-shadow: inset 0px 0px 3px 0px rgba(0,0,0,0.7);
        -webkit-box-shadow: inset 0px 0px 3px 0px rgba(0,0,0,0.7);
        -moz-box-shadow: inset 0px 0px 3px 0px rgba(0,0,0,0.7);
      }
    }
  }
}
